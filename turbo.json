{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["tsconfig.json"],
    "tasks": {
      "build": {
        "env": ["CI"],
        "inputs": ["$TURBO_DEFAULT$"],
        "outputs": ["./dist/**"],
        "dependsOn": ["^build"],
        "passThroughEnv": [
          "PL_REGISTRY_PLATFORMA_OPEN_UPLOAD_URL"
        ]
      },
      "upload-packages": {
        "dependsOn": ["build", "^upload-packages"]
      },
      "test": {
        "dependsOn": ["build"]
      }
    }
  }